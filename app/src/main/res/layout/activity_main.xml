<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rizkianiktia.rizkianiktiasukoco_1202154339_studycase4.MainActivity">

    <TextView
        android:id="@+id/mahasiswa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="14dp"
        android:text="List Nama Mahasiswa"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button_mulai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mahasiswa"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="27dp"
        android:background="@color/colorPrimary"
        android:onClick="mulai"
        android:text="Mulai AsyncTask"
        android:textColor="@android:color/background_light" />

    <ListView
        android:id="@+id/listMahasiswa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_mulai"
        android:layout_marginTop="26dp">

    </ListView>

</RelativeLayout>
